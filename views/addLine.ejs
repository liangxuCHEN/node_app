<% include header.ejs %>
<div class="container">
<form name="add_line" action = '/addLine' method="post" class="form-horizontal">
<fieldset>
      <div id="legend" class="">
        <legend class="">线路编辑</legend>
      </div>
    <div class="control-group">

          <!-- Text input-->
          <label class="control-label" for="input01">线路编号</label>
          <div class="controls">
            <input type="text" placeholder="AB111" class="input-xlarge" name="code">
            <p class="help-block">线路编号</p>
          </div>
        </div>

    <div class="control-group">

          <!-- Text input-->
          <label class="control-label" for="input01">路线名称</label>
          <div class="controls">
            <input type="text" placeholder="一日游" class="input-xlarge" name="name_cn">
            <p class="help-block">路线名称</p>
          </div>
        </div>

<div class="control-group">

          <!-- Text input-->
          <label class="control-label" for="input01">价钱</label>
          <div class="controls">
            <input type="number" placeholder="700" class="input-xlarge" name="price" >
          </div>
        </div>

<div class="control-group">

          <!-- Text input-->
          <label class="control-label" for="input01">目的地</label>
          <div class="controls">
            <input type="text" placeholder="paris(In English)" class="input-xlarge" name="destination" >
           <p class="help-block">可以填写多个，用逗号隔开,provence paris Prague  nice tour paybas italy germany switzerland czech</p>
          </div>
        </div>

    <div class="control-group">

          <!-- Text input-->
          <label class="control-label" for="input01">网址</label>
          <div class="controls">
            <input type="text" placeholder="http://europely.com" class="input-xlarge" name="site">
            <p class="help-block">网址</p>
          </div>
        </div><div class="control-group">
          <label class="control-label">天数</label>

